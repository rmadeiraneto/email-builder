{
  "name": "@email-builder/ui-solid",
  "version": "0.1.0",
  "description": "Solid JS UI implementation for the email builder",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./canvas": {
      "types": "./dist/canvas.d.ts",
      "import": "./dist/canvas.js"
    },
    "./sidebar": {
      "types": "./dist/sidebar.d.ts",
      "import": "./dist/sidebar.js"
    },
    "./toolbar": {
      "types": "./dist/toolbar.d.ts",
      "import": "./dist/toolbar.js"
    }
  },
  "files": ["dist", "src"],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix"
  },
  "keywords": ["ui", "solidjs", "email-builder"],
  "author": "Ricardo Madeira",
  "license": "MIT",
  "dependencies": {
    "@email-builder/core": "workspace:*",
    "@email-builder/tokens": "workspace:*",
    "@email-builder/ui-components": "workspace:*",
    "solid-js": "^1.8.15"
  },
  "devDependencies": {
    "@solidjs/testing-library": "^0.8.7",
    "@testing-library/jest-dom": "^6.4.2",
    "sass": "^1.71.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.0",
    "vite-plugin-dts": "^3.7.3",
    "vite-plugin-solid": "^2.10.1",
    "vitest": "^1.3.0"
  }
}
