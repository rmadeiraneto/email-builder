{
  "name": "@email-builder/core",
  "version": "0.1.0",
  "description": "Framework-agnostic core functionality for the email builder",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "development": "./src/index.ts"
    },
    "./builder": {
      "types": "./dist/builder/index.d.ts",
      "import": "./dist/builder/index.js"
    },
    "./commands": {
      "types": "./dist/commands/index.d.ts",
      "import": "./dist/commands/index.js"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js"
    },
    "./tips": {
      "types": "./dist/tips/index.d.ts",
      "import": "./dist/tips/index.js",
      "development": "./tips/index.ts"
    },
    "./compatibility": {
      "types": "./dist/compatibility/index.d.ts",
      "import": "./dist/compatibility/index.js",
      "development": "./compatibility/index.ts"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js",
      "development": "./utils/index.ts"
    },
    "./config": {
      "types": "./dist/config/index.d.ts",
      "import": "./dist/config/index.js",
      "development": "./config/index.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix"
  },
  "keywords": [
    "email-builder",
    "core",
    "framework-agnostic"
  ],
  "author": "Ricardo Madeira",
  "license": "MIT",
  "devDependencies": {
    "happy-dom": "^20.0.10",
    "typescript": "^5.3.3",
    "vite": "^6.0.0",
    "vite-plugin-dts": "^3.7.3",
    "vitest": "^3.0.0"
  }
}
