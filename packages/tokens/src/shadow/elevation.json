{
  "shadow": {
    "$type": "shadow",
    "sm": {
      "$value": {
        "offsetX": "0",
        "offsetY": "1px",
        "blur": "2px",
        "spread": "0",
        "color": "rgba(0, 0, 0, 0.05)"
      },
      "$description": "Small shadow"
    },
    "base": {
      "$value": {
        "offsetX": "0",
        "offsetY": "1px",
        "blur": "3px",
        "spread": "0",
        "color": "rgba(0, 0, 0, 0.1)"
      },
      "$description": "Base shadow"
    },
    "md": {
      "$value": {
        "offsetX": "0",
        "offsetY": "4px",
        "blur": "6px",
        "spread": "-1px",
        "color": "rgba(0, 0, 0, 0.1)"
      },
      "$description": "Medium shadow"
    },
    "lg": {
      "$value": {
        "offsetX": "0",
        "offsetY": "10px",
        "blur": "15px",
        "spread": "-3px",
        "color": "rgba(0, 0, 0, 0.1)"
      },
      "$description": "Large shadow"
    },
    "xl": {
      "$value": {
        "offsetX": "0",
        "offsetY": "20px",
        "blur": "25px",
        "spread": "-5px",
        "color": "rgba(0, 0, 0, 0.1)"
      },
      "$description": "Extra large shadow"
    },
    "2xl": {
      "$value": {
        "offsetX": "0",
        "offsetY": "25px",
        "blur": "50px",
        "spread": "-12px",
        "color": "rgba(0, 0, 0, 0.25)"
      },
      "$description": "2X large shadow"
    },
    "inner": {
      "$value": {
        "offsetX": "0",
        "offsetY": "2px",
        "blur": "4px",
        "spread": "0",
        "color": "rgba(0, 0, 0, 0.06)",
        "inset": true
      },
      "$description": "Inner shadow"
    },
    "none": {
      "$value": {
        "offsetX": "0",
        "offsetY": "0",
        "blur": "0",
        "spread": "0",
        "color": "rgba(0, 0, 0, 0)"
      },
      "$description": "No shadow"
    }
  }
}
