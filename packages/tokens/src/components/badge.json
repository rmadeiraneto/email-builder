{
  "component": {
    "badge": {
      "padding": {
        "$type": "dimension",
        "x": {
          "sm": { "$value": "0.375rem", "$description": "Small badge horizontal padding (6px)" },
          "md": { "$value": "{spacing.2}", "$description": "Medium badge horizontal padding" },
          "lg": { "$value": "0.625rem", "$description": "Large badge horizontal padding (10px)" }
        },
        "y": {
          "sm": { "$value": "0.125rem", "$description": "Small badge vertical padding (2px)" },
          "md": { "$value": "{spacing.1}", "$description": "Medium badge vertical padding" },
          "lg": { "$value": "0.375rem", "$description": "Large badge vertical padding (6px)" }
        }
      },
      "border-radius": {
        "$type": "dimension",
        "sm": { "$value": "{border.radius.base}", "$description": "Small badge border radius" },
        "md": { "$value": "{border.radius.md}", "$description": "Medium badge border radius" },
        "lg": { "$value": "{border.radius.lg}", "$description": "Large badge border radius" },
        "pill": { "$value": "{border.radius.full}", "$description": "Pill-shaped badge" }
      },
      "font-size": {
        "$type": "dimension",
        "sm": { "$value": "{typography.font-size.xs}", "$description": "Small badge font size" },
        "md": { "$value": "{typography.font-size.sm}", "$description": "Medium badge font size" },
        "lg": { "$value": "{typography.font-size.base}", "$description": "Large badge font size" }
      },
      "font-weight": {
        "$type": "fontWeight",
        "$value": "{typography.font-weight.medium}",
        "$description": "Badge font weight"
      },
      "gap": {
        "$type": "dimension",
        "$value": "{spacing.1}",
        "$description": "Gap between badge icon and text"
      }
    }
  }
}
