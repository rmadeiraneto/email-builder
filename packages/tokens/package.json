{
  "name": "@email-builder/tokens",
  "version": "0.1.0",
  "description": "Design tokens for the email builder",
  "main": "./build/js/tokens.js",
  "module": "./build/js/tokens.js",
  "types": "./build/ts/tokens.d.ts",
  "exports": {
    ".": {
      "types": "./build/ts/tokens.d.ts",
      "import": "./build/js/tokens.js"
    },
    "./scss": "./build/scss/_variables.scss",
    "./css": "./build/css/variables.css",
    "./colors/brand": "./src/colors/brand.json",
    "./colors/semantic": "./src/colors/semantic.json",
    "./colors/ui": "./src/colors/ui.json",
    "./colors/syntax": "./src/colors/syntax.json",
    "./typography/fonts": "./src/typography/fonts.json",
    "./typography/sizes": "./src/typography/sizes.json",
    "./typography/weights": "./src/typography/weights.json",
    "./typography/line-heights": "./src/typography/line-heights.json",
    "./typography/letter-spacing": "./src/typography/letter-spacing.json",
    "./spacing/scale": "./src/spacing/scale.json",
    "./sizing/scale": "./src/sizing/scale.json",
    "./border/radius": "./src/border/radius.json",
    "./border/width": "./src/border/width.json",
    "./shadow/elevation": "./src/shadow/elevation.json",
    "./animation/duration": "./src/animation/duration.json",
    "./animation/easing": "./src/animation/easing.json",
    "./breakpoints/devices": "./src/breakpoints/devices.json"
  },
  "files": ["build", "src"],
  "scripts": {
    "build": "node scripts/build-tokens.js",
    "watch": "node scripts/build-tokens.js --watch",
    "clean": "rm -rf build"
  },
  "keywords": ["design-tokens", "design-system", "theme"],
  "author": "Ricardo Madeira",
  "license": "MIT",
  "devDependencies": {
    "style-dictionary": "^3.9.2"
  }
}
