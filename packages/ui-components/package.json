{
  "name": "@email-builder/ui-components",
  "version": "0.1.0",
  "description": "Framework-agnostic UI components for the email builder (Vanilla JS)",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./atoms": {
      "types": "./dist/atoms/index.d.ts",
      "import": "./dist/atoms/index.js"
    },
    "./molecules": {
      "types": "./dist/molecules/index.d.ts",
      "import": "./dist/molecules/index.js"
    },
    "./organisms": {
      "types": "./dist/organisms/index.d.ts",
      "import": "./dist/organisms/index.js"
    },
    "./styles": "./dist/styles/index.css"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix"
  },
  "keywords": [
    "ui-components",
    "vanilla-js",
    "web-components"
  ],
  "author": "Ricardo Madeira",
  "license": "MIT",
  "dependencies": {
    "@email-builder/tokens": "workspace:*"
  },
  "devDependencies": {
    "jsdom": "^27.0.1",
    "sass": "^1.71.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.0",
    "vite-plugin-dts": "^3.7.3",
    "vitest": "^1.3.0"
  }
}
