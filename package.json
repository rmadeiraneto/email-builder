{
  "name": "@email-builder/root",
  "version": "0.1.0",
  "private": true,
  "description": "A reactive, framework-agnostic email/newsletter/webpage builder using microfrontend architecture",
  "homepage": "https://github.com/rmadeiraneto/email-builder#readme",
  "bugs": {
    "url": "https://github.com/rmadeiraneto/email-builder/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rmadeiraneto/email-builder.git"
  },
  "license": "MIT",
  "author": "Ricardo Madeira",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "pnpm --filter \"./apps/dev\" dev",
    "build": "pnpm --recursive --stream build",
    "build:tokens": "pnpm --filter \"@email-builder/tokens\" build",
    "test": "pnpm --recursive --stream test",
    "test:watch": "pnpm --recursive --parallel test:watch",
    "lint": "pnpm --recursive --stream lint",
    "lint:fix": "pnpm --recursive --stream lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,scss,css}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,scss,css}\"",
    "typecheck": "pnpm --recursive --stream typecheck",
    "clean": "pnpm --recursive --parallel exec rm -rf dist node_modules .turbo",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/lodash-es": "^4.17.12",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-solid": "^0.13.2",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3",
    "vite": "^6.0.0",
    "vitest": "^3.0.0"
  },
  "packageManager": "pnpm@8.15.4",
  "dependencies": {
    "@floating-ui/dom": "^1.7.4",
    "alwan": "^2.3.0",
    "color2k": "^2.0.3",
    "lexical": "^0.38.1",
    "lodash-es": "^4.17.21"
  }
}
